
        local Players = game:GetService('Players')
        local localplayer = Players.LocalPlayer
        local humanoid = localplayer.Character.Humanoid
        local GuiService = game:GetService("GuiService")
        local Light = game:GetService("Lighting")

local Library = loadstring(Game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()

local PhantomForcesWindow = Library:NewWindow("YOUHUB | Evade")

local v1 = PhantomForcesWindow:NewSection("Respawn")

v1:CreateButton("Respawn", function()
game:GetService("ReplicatedStorage").Events.Respawn:FireServer()
end)
v1:CreateToggle("Respawn On Downed",function(value)
_G.Rep = value
while _G.Rep do wait()
game:GetService("ReplicatedStorage").Events.Respawn:FireServer()
end
end)
local v2 = PhantomForcesWindow:NewSection("Camera")
v2:CreateDropdown("POV Camera", {"Follow", "Fixed", "Attach"}, function(value)
_G.POVc = value
if _G.POVc == "Follow" then
                workspace.CurrentCamera.CameraType = "Follow"
            elseif _G.POVc == 'Fixed' then
                workspace.CurrentCamera.CameraType = "Fixed"
            elseif _G.POVc == 'Attach' then
                workspace.CurrentCamera.CameraType = "Attach"
            end
end)
v2:CreateButton("No Shake Camera", function()
  localplayer.PlayerScripts.CameraShake.Value = CFrame.new(0,0,0) * CFrame.new(0,0,0)
end)

local v3 = PhantomForcesWindow:NewSection("Misc")
v3:CreateButton("WalkSpeed", function()
while wait() do
  humanoid.WalkSpeed = 50
end
end)
v3:CreateButton("JumpPower", function()
while wait() do
  humanoid.JumpPower = 100
end
end)
v3:CreateButton("HipHeight [ 15 second ]", function()
  humanoid.HipHeight = 50
wait(15)
  humanoid.HipHeight = 2
end)
v3:CreateButton("Day", function()
  Light.ClockTime = 12
end)
v3:CreateButton("Night", function()
  Light.ClockTime = 24
end)
v3:CreateToggle("Fullbright",function(value)
if value then
Light.Brightness = 3
Light.GlobalShadows = false
Light.OutdoorAmbient = Color3.new(1,1,1)
else
Light.Brightness = 2
Light.GlobalShadows = true
Light.OutdoorAmbient = Color3.new(0.5,0.5,0.5)
end
end)

